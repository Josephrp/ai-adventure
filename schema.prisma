generator client {
  provider = "prisma-client-js"
}
 
datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Agents {
  id        Int      @id @default(autoincrement())
  ownerId   String
  agentUrl  String
}

model Subscriptions {
  id        Int      @id @default(autoincrement())
  ownerId   String
  stripeId  String
  priceId    String
  subscriptionId  String
}

model TopUps {
  id        Int      @id @default(autoincrement())
  ownerId   String
  agentUrl  String
  amount    Int     // Amount paid
  coins     Int     // Coins added
  reference String  // Stripe reference
}